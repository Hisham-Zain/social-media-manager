# ======================================
# AgencyOS - API Configuration
# ======================================
# Copy this file to .env and fill in your keys
# cp .env.example .env

# === LLM CONFIGURATION ===
# LiteLLM supports 100+ providers with a unified API
# Options: openai, anthropic, groq, gemini, ollama, cohere
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# Fallback provider (used when primary fails)
LLM_FALLBACK_PROVIDER=ollama
LLM_FALLBACK_MODEL=llama3.2:3b

# === API KEYS (only needed for your chosen provider) ===

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Groq (Free) - https://console.groq.com/keys
GROQ_API_KEY=

# Google Gemini - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Cohere - https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# Perplexity AI - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# === LOCAL OLLAMA ===
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# === DATABASE (PostgreSQL) ===
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agencyos

# Connection pool settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# === ADDITIONAL API KEYS ===
# HuggingFace - https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# Pexels Stock Photos - https://www.pexels.com/api/
PEXELS_API_KEY=

# Pixabay Stock Media - https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# === OPTIONAL: Platform Publishing ===
# YouTube API credentials (OAuth)
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# Instagram/Facebook Graph API
INSTAGRAM_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# TikTok API
TIKTOK_ACCESS_TOKEN=

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=

# === MCP INTEGRATIONS (Phase 4) ===
# Slack - https://api.slack.com/apps
SLACK_TOKEN=
SLACK_CHANNEL=general

# Google Calendar API (optional)
GOOGLE_CALENDAR_CREDENTIALS=
